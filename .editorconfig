[*]
charset                  = utf-8
end_of_line              = lf
indent_size              = 4
indent_style             = space
insert_final_newline     = true
max_line_length          = 120
tab_width                = 4
trim_trailing_whitespace = true

[*.py]
max_line_length = 100

[*.toml]
max_line_length = 80

[{*.bash,*.sh,*.zsh}]
indent_size      = 2
tab_width        = 2
ij_visual_guides = 80

[*.json]
indent_size = 2
tab_width   = 2

[{*.yaml,*.yml}]
indent_size = 2
tab_width   = 2

[.editorconfig]
max_line_length = 80
